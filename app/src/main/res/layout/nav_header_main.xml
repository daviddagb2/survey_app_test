<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/drawer_bg_color"
    android:gravity="bottom|top"
    android:orientation="vertical"
    android:paddingStart="@dimen/nav_header_horizontal_spacing"
    android:paddingTop="@dimen/nav_header_horizontal_spacing"
    android:paddingEnd="@dimen/nav_header_horizontal_spacing"
    android:paddingBottom="40dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/nav_header_title_top_spacing"
            android:text="Mai"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/nav_header_desc"
            android:padding="5dp"
            android:src="@drawable/icuser" />
    </LinearLayout>

</LinearLayout>